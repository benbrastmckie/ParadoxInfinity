%Reference
\newcommand{\n}[1]{(\ref{#1})}

%Propositions
\newcounter{propositions}
\newcommand{\bprop}[1]{
\addtocounter{propositions}{1}
\begin{list}
{(\arabic{propositions})}{\usecounter{all}}
\setcounter{all}{\value{propositions}} \addtocounter{all}{-1}
\item \label{#1}
}
\newcommand{\eprop}{\end{list}}


